{
    "train_batch_size": 64,
    "gradient_accumulation_steps": 1,

    "train_micro_batch_size_per_gpu": 64,

    "fp16": {
        "enabled": false
    },
    "zero_optimization": {
        "stage": 1
    },
    "optimizer": {
        "type": "Adam",
        "params": {
            "lr": 0.001,
            "betas": [0.8, 0.999],
            "eps": 1e-8,
            "weight_decay": 3e-7
        }
    },
    "scheduler": {
        "type": "WarmupLR",
        "params": {
            "warmup_min_lr": 0,
            "warmup_max_lr": 0.001,
            "warmup_num_steps": 1000
        }
    },
    "gradient_clipping": 1.0
}
